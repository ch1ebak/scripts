    ### hyprpaper
    sed -i 's@hypr/wallpapers*.*@hypr/wallpapers/onedark.png@g' /home/$USER/.dotfiles/.config/hypr/hyprpaper.conf
    ### waybar
    sed -i 's@themes/*.*@themes/onedark.css";@g' /home/$USER/.dotfiles/.config/waybar/style.css
    ## reset
    if [ $XDG_SESSION_TYPE = 'wayland' ]; then
      nohup bash -c "killall -e hyprpaper & sleep 1; hyprpaper &"
      nohup bash -c "killall waybar && waybar & disown"
    elif [ $XDG_SESSION_TYPE = 'x11' ]; then
      qtile cmd-obj -o cmd -f reload_config
    else
      echo "What?"
    fi
    # dunst
    sed -i 's@background\ =\ "#*.*@background\ =\ "#282c34"@g' /home/$USER/.dotfiles/.config/dunst/dunstrc
    sed -i 's@foreground\ =\ "#*.*@foreground\ =\ "#abb2bf"@g' /home/$USER/.dotfiles/.config/dunst/dunstrc
    sed -i 's@frame_color\ =\ "#*.*@frame_color\ =\ "#61afef"@g' /home/$USER/.dotfiles/.config/dunst/dunstrc
    killall -e dunst & sleep 1; dunstify "Theme switched to One Dark" &
  }
