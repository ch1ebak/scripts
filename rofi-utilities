  declare -a options=(
  ayu
  catppuccin
  dracula
  everforest
  grayscale
  gruvbox
  kanagawa
  onedark
  poimandres
  spacegray
  tokyonight
  "quit"
  )
  choice=$(printf '%s\n' "${options[@]}" | rofi -m 1 -dmenu -i -l 20 -p 'Utilities')
  if [[ "$choice" == quit ]]; then
    echo "Program Terminated." && exit 1
  elif [ "$choice" ]; then
    cfg=$(printf '%s\n' "${choice}" | awk '{print $NF}')
    "$cfg"
  else
    echo "What?" && exit 1
  fi
}

Screenshot () {
if [ $XDG_SESSION_TYPE = 'wayland' ]; then
  sleep 1; grim -o HDMI-A-1 -l 9 -t png
  notify-send "Screenshot Taken"
elif [ $XDG_SESSION_TYPE = 'x11' ]; then
  scrot -d 1 -M 0 -q 9
  notify-send "Screenshot Taken"
else
  echo "What?"
fi
}

declare -a options=(
Screenshot
Wallpaper
Themes
"Quit"
)

choice=$(printf '%s\n' "${options[@]}" | rofi -m 1 -dmenu -i -l 20 -p 'Utilities')

if [[ "$choice" == quit ]]; then
	echo "Program Terminated." && exit 1
elif [ "$choice" ]; then
	cfg=$(printf '%s\n' "${choice}" | awk '{print $NF}')
	"$cfg"
else
	echo "Program Terminated." && exit 1
fi

