#!/usr/bin/env bash

set -e
set -u


Wallpaper () {
if [ $XDG_SESSION_TYPE = 'wayland' ]; then
  directory=/home/$USER/Obrazy/tapety/
  if [ -d "$directory" ]; then
    random_background=$(ls $directory/* | shuf -n 1)
    hyprctl hyprpaper unload all
    hyprctl hyprpaper preload $random_background
    hyprctl hyprpaper wallpaper ", $random_background"
  fi
elif [ $XDG_SESSION_TYPE = 'x11' ]; then
  shuf -e -n1 $HOME/Obrazy/tapety/* | xargs feh --bg-fill
else
  echo "What?"
fi
}

Themes () {
  ayu () {
    # btop
    sed -i 's@themes/*.*@themes/ayu.theme"@g' /home/$USER/.dotfiles/.config/btop/btop.conf
    # emacs
    sed -i "s/load-theme\ '*.*/load-theme 'doom-ayu-mirage\ :no-confirm)/g" /home/$USER/.dotfiles/.config/emacs/init.el
    # ghostty
    sed -i 's@themes/*.*@themes/Ayu Mirage@g' /home/$USER/.dotfiles/.config/ghostty/config
    # neovim
    # sed -i "s@colorscheme\ *.*@colorscheme ayu-mirage'@g" /home/$USER/.dotfiles/.config/nvim/lua/core/colorscheme.lua
    # sed -i "s@theme\ =\ *.*@theme\ =\ 'ayu',@g" /home/$USER/.dotfiles/.config/nvim/lua/plugins/lualine.lua
    # rofi
    sed -i 's@themes/*.*@themes/ayu"@g' /home/$USER/.dotfiles/.config/rofi/config.rasi
    # rmpc
    sed -i 's/theme:\ Some("*.*"),/theme:\ Some("ayu"),/g' /home/$USER/.dotfiles/.config/rmpc/config.ron
    # Xresources
    sed -i 's@xresources/*.*@xresources/ayu"@g' /home/$USER/.dotfiles/.Xresources
    # WMs
    ## qtile
    # sed -i 's/themes.*\ import\ colors/themes.ayu\ import\ colors/g' /home/$USER/.dotfiles/.config/qtile/config.py
    # sed -i 's@wallpapers/*.*@wallpapers/ayu.png",@g' /home/$USER/.dotfiles/.config/qtile/config.py
    ## hyprland
    ### hyprland
    sed -i 's@col.active_border*.*@col.active_border\ =\ rgba(FFCC66ff)@g' /home/$USER/.dotfiles/.config/hypr/hyprland.conf
    sed -i 's@col.inactive_border*.*@col.inactive_border\ =\ rgba(444A55ff)@g' /home/$USER/.dotfiles/.config/hypr/hyprland.conf
    sed -i 's@color*.*@color\ =\ rgba(323843ff)@g' /home/$USER/.dotfiles/.config/hypr/hyprland.conf
    ### hyprlock
    sed -i 's@wallpapers/*.*@wallpapers/ayu.png@g' /home/$USER/.dotfiles/.config/hypr/hyprlock.conf
    ### hyprpaper
    sed -i 's@hypr/wallpapers*.*@hypr/wallpapers/ayu.png@g' /home/$USER/.dotfiles/.config/hypr/hyprpaper.conf
    ### waybar
    sed -i 's@themes/*.*@themes/ayu.css";@g' /home/$USER/.dotfiles/.config/waybar/style.css
    ## reset
    if [ $XDG_SESSION_TYPE = 'wayland' ]; then
      nohup bash -c "killall -e hyprpaper & sleep 1; hyprpaper &"
      nohup bash -c "killall waybar && waybar & disown"
    elif [ $XDG_SESSION_TYPE = 'x11' ]; then
      qtile cmd-obj -o cmd -f reload_config
    else
      echo "What?"
    fi
    # dunst
    sed -i 's@background\ =\ "#*.*@background\ =\ "#1F2430"@g' /home/$USER/.dotfiles/.config/dunst/dunstrc
    sed -i 's@foreground\ =\ "#*.*@foreground\ =\ "#CCCAC2"@g' /home/$USER/.dotfiles/.config/dunst/dunstrc
    sed -i 's@frame_color\ =\ "#*.*@frame_color\ =\ "#FFCC66"@g' /home/$USER/.dotfiles/.config/dunst/dunstrc
    killall -e dunst & sleep 1; dunstify "Theme switched to Ayu" &
  }
  catppuccin () {
    # btop
    sed -i 's@themes/*.*@themes/catppuccin.theme"@g' /home/$USER/.dotfiles/.config/btop/btop.conf
    # emacs
    sed -i "s/load-theme\ '*.*/load-theme 'catppuccin\ :no-confirm)/g" /home/$USER/.dotfiles/.config/emacs/init.el
    # ghostty
    sed -i 's@themes/*.*@themes/catppuccin-mocha@g' /home/$USER/.dotfiles/.config/ghostty/config
